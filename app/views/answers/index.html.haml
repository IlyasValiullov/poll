%h1 #{@question.question}

=link_to 'New answer', new_poll_question_answer_path(@poll,@question), class: "btn btn-success"

%table.table.table-bordered
  %thead
    %tr
      %th.col-md-10 Answer
      %th.col-md-1
      %th.col-md-1

  %tbody
    - @answers.each do |answer|
      %tr
        %td.col-md-10= answer.answer
        %td.col-md-1= link_to 'Edit', edit_poll_question_answer_path(@poll, @question, answer)
        %td.col-md-1= link_to 'Destroy', poll_question_answer_path(@poll, @question, answer), :method => :delete, :data => { :confirm => 'Are you sure?' }
